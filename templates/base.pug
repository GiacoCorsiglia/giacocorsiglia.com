block variables

doctype html
html(lang="en", id=htmlId)
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    meta(name="HandheldFriendly" content="true")
    meta(http-equiv="X-UA-Compatible" content="ie=edge")

    title=title
    meta(name="description" content=description)
    meta(property="og:url" content=url)
    meta(property="og:title" content=title)
    meta(property="og:description" content=description)
    meta(name="twitter:card" content="summary")
    meta(name="twitter:site" content="https://giacocorsiglia.com")
    meta(name="twitter:title" content=title)
    meta(name="twitter:description" content=description)

    if image
      meta(property="og:image" content=`https://giacocorsiglia.com${image.src}`)
      meta(property="og:image:width" content=image.width)
      meta(property="og:image:height" content=image.height)
      meta(property="og:image:alt" content=image.alt)
      meta(name="twitter:image" content=`https://giacocorsiglia.com${image.src}`)
      meta(name="twitter:image:alt" content=image.alt)

    //- Stylesheet.
    link(rel="stylesheet" href="/index.css")
    //- Favicon.
    link(rel="icon" type="image/x-icon" href="/favicon.ico")
  body
    //- Font stylesheet.
    //- var fontWeights = '100,100i,300,300i,400,400i,700,700i,900,900i'
    - var fontWeights = '400,900'
    link(
      href="https://fonts.googleapis.com/css?family=Lato:" + fontWeights,
      rel="stylesheet",
      onload="document.body.classList.add('js-fonts-loaded');"
    )

    block body

    footer#footer
      p Â© Giaco Corsiglia #{new Date().getFullYear()}
      p
        a(href="https://github.com/GiacoCorsiglia/giacocorsiglia.com").
          Published on GitHub
      p
        span(
          id="toggle-grid",
          onclick="document.body.classList.toggle('baseline-grid');"
        ) Toggle baseline grid

    block javascript
